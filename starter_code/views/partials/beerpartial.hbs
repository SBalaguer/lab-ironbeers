<div class="card beer-card">
    <div class="beer-img"><img src="{{this.image_url}}" class="card-img-top"></div>
    <div class="card-body">
      <h5 class="card-title">{{this.name}}</h5>
      <h6>{{this.tagline}}</h6>
      <p class="card-text">{{this.description}}</p>
      <a href="/beers/{{this.id}}">See more information</a>
    </div>
</div>
 